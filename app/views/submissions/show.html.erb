<%# <br><br><br><br> %>
<section class="page-title parallax parallax1">
  <div class="title-heading">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="box-title">
            <h1>
              <%= @assignment.title %> 제출한 과제
            </h1>
          </div><!-- /.box-title -->
        </div><!-- /.col-md-12 -->
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.title-heading -->
<div class="overlay-black"></div>
</section><!-- /.page-title parallax -->

<div class="container">
  <div class="submission-body">
    <div class="submission-img">
      <%= image_tag(@submission.image_url)%>
    </div>
    
    <div class="wish-toggle" id="wish-toggle">
      <%= render 'shared/wish', submission: @submission %>
    </div>

    <div class="submission-title">
      제목: <%= @submission.title %>
    </div>
    <div class="submission-description">
      설명: <%= @submission.description %>
    </div>
    <div class="submission-url">
      작품 경로: <%= target_blank_link(@submission.url) %>
    </div>
</div>

<div class="comment-form my-5">
  <h4>댓글 작성</h4>
  <%= form_for(@comment, url: comments_path, method: :post) do |f| %>
    <%= f.hidden_field :commentable_id, value: @submission.id %>  <%# 히든으로 상위 모델의 id 값과 type 값을 넘겨주면 %>
    <%= f.hidden_field :commentable_type, value: @submission.class.name %>

    <%= f.text_area :body %>
    <%= f.submit "댓글 달기", class: "btn  btn-sm btn-outline-primary my-2,", style: "color: #fff"%>
  <% end %>
</div>

<div class="comment-show">
  <hr>
  <% @comments.each do |comment| %>
    <div class="content-box">
      <div class="user-comment">
        <div class="row">
          <div class="col-30">
            <%= image_tag(User.find(comment.user_id).thumbnail_url, style:"width: 50px") %>
            <%= User.find(comment.user_id).name %>
          </div>
          <div class="col" style="color: #aaa;">
            <%= time_ago_in_words(comment.created_at) %> 전
          </div>
        </div>
        <div class="conetent-text">
          <p><%= simple_format comment.body %></p>
        </div>
      </div>
    </div>
    <hr>
  <% end %>
</div>

<script type="text/javascript">
  
</script>


<style>
  body {
    text-align: center;
  }
</style>