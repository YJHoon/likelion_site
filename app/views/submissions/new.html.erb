<section class="flat-signin">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="wrap-sign-in center">
          <h4><%= @assignment.title %> 과제 제출</h2>
          <div class="form-sign-in">
            <%= form_for(@submission, url: assignment_submissions_path(@assignment), method: :post) do |f| %>
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, autofocus: true, autocomplete: "off" %>
            </div>
            <div class="field">
              <%= image_tag "/images/test_image3.jpg", class: "represent_image", id: "represent_image_display", alt: "", style:"align: center;"%>
              <%= link_to "대표이미지 첨부", '#', remote: true, id: "image_upload_button" %>
              <%= f.file_field :image, class: "display-none" %>
            </div>
            <div class="form-group">
              <%= f.label :url %>
              <%= f.text_field :url, autofocus: true, autocomplete: "off" %>
            </div>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, autofocus: true %>
            </div>

            <div class="btn-submit">
              <button type="submit" name="commit" class="bg-black">제출하기</button>
            </div>

            <% end %>
          </div><!-- /.form-sign-in -->
        </div><!-- /.wrap-sign-in -->
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-singin -->

<style>
	.field{
    display: block;
    margin-left: auto;
    margin-right: auto;
    max-height: 200px;
    width: 200px;
		overflow: hidden;
	}
	.field img{
    max-height: initial;
    margin-top: -30%;
	}
</style>