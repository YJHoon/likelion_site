
<section class="flat-signin">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="wrap-sign-in center">
          <h3><%= ((action_name == 'new') ? assignment.title : submission.title) %></h3>
          <div class="form-sign-in">
            <%= form_for(submission, url: assignment_submissions_path(assignment), html: { multipart: true }, method: :post) do |f| %>
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, autofocus: true, autocomplete: "off", required: true %>
            </div>

            <div class="divider-40"></div>

            <div class="form-group">
              <%= f.label :url %>
              <%= f.text_field :url, autofocus: true, autocomplete: "off" %>
            </div>

            <div class="divider-40"></div>

            <div class="form-group" style="">
              <%= f.label :description %>
              <%= f.rich_text_area :description, style:"height:400px; text-align: left;" %>
            </div>
            
            <div class="divider-40"></div>
            
            <div class="btn-submit">
              <button type="submit" name="commit" class="bg-black"><%= ((action_name == 'new') ? '생성하기' : '수정하기') %></button>
            </div>

            <% end %>
          </div><!-- /.form-sign-in -->
        </div><!-- /.wrap-sign-in -->
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-singin -->

<style>
.wrap-sign-in{
  padding-top: 80px;
}
.trix-button {
  color: white !important;
}

</style>

<script type="text/javascript">
  function readURL(input) {
    if (input.files && input.files[0]) {
      var reader = new FileReader();
        reader.onload = function (e) {
          $('img').attr('src', e.target.result);
        };
        reader.readAsDataURL(input.files[0]);
    }
  }
  $('input').on('change', function(){
    readURL(this);
  });
  
</script>