<div class="container my-5">
  <div class="row">
    <div class="card col-md-6 offset-md-3 p-5">
      <div class="wrap-sign-in center">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :thumbnail, "사진" %>
            <%= f.file_field :thumbnail, class: "button" %>
          </div>
          <br />

          <div class="form-group">
            <%= f.label :email, "이메일" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div><br />

          <div class="form-group">
            <%= f.label :name, "이름" %>
            <%= f.text_field :name, autocomplete: "name" %>
          </div><br />

          <div class="form-group">
            <%= f.label :user_type, "분류" %>
            <%= f.select :user_type, [["운영진": "mentor"], ["아기사자": "mentee"]], class: "form-control" do %>
              <option value="mentor">운영진</option>
              <option value="mentee">아기사자</option>
            <% end %>
          </div><br />

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div><br />

          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div><br />

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>