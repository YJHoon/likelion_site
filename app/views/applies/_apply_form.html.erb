<section class="flat-signin">
  <div class="container">
    <div class="row">
      <div class="col-md-12 center">
        <div class="wrap-sign-in">
          <h2>지원서</h2>
          <hr>
          <div class="form-sign-in">
          
            <%= form_for(apply, url: url, method: method, remote: true) do |f| %>    
              <div class="form-group">
                <%= f.label :name, '이름*' %>
                <%= f.text_field :name, required: true %>
              </div><br>

              <div class="form-group">
                <%= f.label :email, '이메일*' %>
                <%= f.email_field :email, required: true %>
              </div><br>
              
              <div class="form-group">
                <%= f.label :student_id, '학번*' %>
                <%= f.text_field :student_id, placeholder: "학번 10자리를 입력해주세요.", required: true, maxlength: 10 %>
              </div><br>

              <div class="form-group">
                <%= f.label :phone, '전화번호*' %>
                <%= f.text_field :phone, required: true, maxlength: 11, placeholder: "'-'를 제외하고 입력해주세요" %>
              </div><br>

              <div class="form-group">
                <%= f.label :major, '전공*' %>
                <%= f.text_field :major, required: true %>
              </div><br>

              <div class="form-group">
                <%= f.label :grade, '학년*' %>
                <%= f.text_field :grade, required: true %>
              </div><br><br>

              <%= render 'form', ask_q: @recruit.ask1_q, f: f, title: "질문 1.", ask_a: :ask1_a, ask_type: @recruit.ask1_type, ask_choices: @recruit.ask1_choices, ask_file: :ask1_file, required: true %>
              <%= render 'form', ask_q: @recruit.ask2_q, f: f, title: "질문 2.", ask_a: :ask2_a, ask_type: @recruit.ask2_type, ask_choices: @recruit.ask2_choices, ask_file: :ask2_file, required: true, _class: "question-text" %>
              <%= render 'form', ask_q: @recruit.ask3_q, f: f, title: "질문 3.", ask_a: :ask3_a, ask_type: @recruit.ask3_type, ask_choices: @recruit.ask3_choices, ask_file: :ask3_file, required: true, _class: "question-text" %>
              <%= render 'form', ask_q: @recruit.ask4_q, f: f, title: "질문 4.", ask_a: :ask4_a, ask_type: @recruit.ask4_type, ask_choices: @recruit.ask4_choices, ask_file: :ask4_file, required: true, _class: "question-text" %>
              <%= render 'form', ask_q: @recruit.ask5_q, f: f, title: "질문 5.", ask_a: :ask5_a, ask_type: @recruit.ask5_type, ask_choices: @recruit.ask5_choices, ask_file: :ask5_file %>
              <%= render 'form', ask_q: @recruit.ask6_q, f: f, title: "질문 6.", ask_a: :ask6_a, ask_type: @recruit.ask6_type, ask_choices: @recruit.ask6_choices, ask_file: :ask6_file %>
              <%= render 'form', ask_q: @recruit.ask7_q, f: f, title: "질문 7.", ask_a: :ask7_a, ask_type: @recruit.ask7_type, ask_choices: @recruit.ask7_choices, ask_file: :ask7_file %>
              <%= render 'form', ask_q: @recruit.ask8_q, f: f, title: "질문 8.", ask_a: :ask8_a, ask_type: @recruit.ask8_type, ask_choices: @recruit.ask8_choices, ask_file: :ask8_file %>
              <%= render 'form', ask_q: @recruit.ask9_q, f: f, title: "질문 9.", ask_a: :ask9_a, ask_type: @recruit.ask9_type, ask_choices: @recruit.ask9_choices, ask_file: :ask9_file %>
              <%= render 'form', ask_q: @recruit.ask10_q, f: f, title: "질문 10.", ask_a: :ask10_a, ask_type: @recruit.ask10_type, ask_choices: @recruit.ask10_choices, ask_file: :ask10_file %>

              <% if @recruit.additional1_q && @recruit.additional1_q != "" %>
                <div class="form-group">
                  <label>질문6. <%= @recruit.additional1_q %></label><br>
                  <% Apply.additional1_as.keys.each do |key| %>
                    <%= f.radio_button :additional1_a, key %>
                    <%= f.label key.to_sym %><br>
                  <% end %>
                  
                </div><br>
              <% end %>

              <% if @recruit.additional2_q && @recruit.additional2_q != "" %>
                <div class="form-group">
                  <label>질문7. <%= @recruit.additional2_q %></label><br>
                  <% Apply.additional2_as.keys.each do |key| %>
                    <%= f.radio_button :additional2_a, key %>
                    <%= f.label key.to_sym %><br>
                  <% end %>
                </div><br>
              <% end %>

              <div class="error-msg">
                <%= render "shared/errors", resource: apply %>
              </div>

              <div class="btn-form-group center">
                <button type="submit" class="flat-button-form" id="apply_submit_button" data-confirm= "제출하시겠습니까?">제출하기</button>
              </div>

            <% end %>
          </div><!-- /.form-sign-in -->
        </div><!-- /.wrap-sign-in -->
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-singin -->

<style>
.wrap-sign-in{
  padding-top:80px;
}

.form-group .question-text{
  height: 500px;
}

</style>
