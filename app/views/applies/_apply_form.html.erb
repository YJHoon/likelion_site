<section class="flat-signin">
  <div class="container">
    <div class="row">
      <div class="col-md-12 center">
        <div class="wrap-sign-in">
          <h2>지원서</h2>
          <hr>
          <div class="form-sign-in">
          
            <%= form_for(apply, url: url, method: method, remote: true) do |f| %>    
              <div class="form-group">
                <%= f.label :name, '이름*' %>
                <%= f.text_field :name, required: true %>
              </div><br>

              <div class="form-group">
                <%= f.label :email, '이메일*' %>
                <%= f.email_field :email, required: true %>
              </div><br>
              
              <div class="form-group">
                <%= f.label :student_id, '학번*' %>
                <%= f.text_field :student_id, placeholder: "학번 10자리를 입력해주세요.", required: true, maxlength: 10 %>
              </div><br>

              <div class="form-group">
                <%= f.label :phone, '전화번호*' %>
                <%= f.text_field :phone, required: true, maxlength: 11, placeholder: "'-'를 제외하고 입력해주세요" %>
              </div><br>

              <div class="form-group">
                <%= f.label :major, '전공*' %>
                <%= f.text_field :major, required: true %>
              </div><br>

              <div class="form-group">
                <%= f.label :grade, '학년*' %>
                <%= f.text_field :grade, required: true %>
              </div><br><br>

              <% if @recruit.ask1_q && @recruit.ask1_q != "" %>
                <div class="form-group">
                  <label>질문1. <%= @recruit.ask1_q %></label>
                  <%= f.text_area :ask1_a, required: true %>
                </div><br>
              <% end %>

              <% if @recruit.ask2_q && @recruit.ask2_q != "" %>
                <div class="form-group">
                  <label>질문2. <%= @recruit.ask2_q %> (700자 이내)</label>
                  <%= f.text_area :ask2_a, required: true %>
                </div><br>
              <% end %>

              <% if @recruit.ask3_q && @recruit.ask3_q != "" %>
                <div class="form-group">
                  <label>질문3. <%= @recruit.ask3_q %></label>
                  <%= f.text_area :ask3_a, required: true %>
                </div><br>
              <% end %>

              <% if @recruit.ask4_q && @recruit.ask4_q != "" %>
                <div class="form-group">
                  <label>질문4. <%= @recruit.ask4_q %></label>
                  <%= f.text_area :ask4_a, required: true %>
                </div><br>
              <% end %>

              <% if @recruit.ask5_q && @recruit.ask5_q != "" %>
                <div class="form-group">
                  <label>질문5. <%= @recruit.ask5_q %></label>
                  <%= f.text_area :ask5_a, required: true %>
                  <%= f.file_field :ask5_file %>
                </div><br>
              <% end %>

              <% if @recruit.ask6_q && @recruit.ask6_q != "" %>
                <div class="form-group">
                  <label>질문6. <%= @recruit.ask6_q %></label><br><br>
                  <div class="participation">
                    <%= f.radio_button :ask6_a, "참여" %>
                    <%= f.label :ask6_a, "참여", value: "참여" %>
                  </div>
                  
                  <div class="not-participation">
                    <%= f.radio_button :ask6_a, "불참" %>
                    <%= f.label :ask6_a, "불참", value: "불참" %>
                  </div>

                  <div class="late-participation">
                    <%= f.radio_button :ask6_a, "늦참" %>
                    <%= f.label :ask6_a, "늦참", value: "늦참" %>
                  </div>
                </div><br>
              <% end %>

              <% if @recruit.ask7_q && @recruit.ask7_q != "" %>
                <div class="form-group">
                  <label>질문7. <%= @recruit.ask7_q %></label>
                  <%= f.select :ask7_a, options_for_select(["참여", "불참", "늦참"], apply.ask7_a), include_blank: true %>
                  <div class="participation">
                    <%= f.radio_button :ask7_a, "참여"%>
                    <%= f.label :ask7_a, "참여", value: "참여" %>
                  </div>
                  
                  <div class="not-participation">
                    <%= f.radio_button :ask7_a, "불참" %>
                    <%= f.label :ask7_a, "불참", value: "불참" %>
                  </div>

                  <div class="late-participation">
                    <%= f.radio_button :ask7_a, "늦참" %>
                    <%= f.label :ask7_a, "늦참", value: "늦참" %>
                  </div>
                </div><br>
              <% end %>

              <div class="error-msg">
                <%= render "shared/errors", resource: apply %>
              </div>

              <div class="btn-contact-form center">
                <button type="submit" class="flat-button-form" id="apply_submit_button" data-confirm= "제출하시겠습니까?">제출하기</button>
              </div>

            <% end %>
          </div><!-- /.form-sign-in -->
        </div><!-- /.wrap-sign-in -->
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-singin -->

<style>
.wrap-sign-in{
  padding-top:80px;
}
</style>