<section class="flat-team style5">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="flat-title">
					<h3><strong>8기 운영진 소개</strong></h3>
				</div>
			</div>
		</div>
		<div class="row">
      <% @users.each do |user| %>
        <div class="col-md-3 col-sm-6 col-xs-6 col-lg-3">
          <div class="team-member style4">
            <div class="avatar">
              <%= image_tag("#{ user.image_url }")%>
            </div>
            <div class="info">
              <div class="name">
                <%= user.name %>
              </div>
              <div class="option">
                <%= user.enum_ko(:mentor_type) %>
              </div>
            </div>
          </div><!-- /.team-member style4 -->
        </div><!-- /.col-md-3 col-sm-6 -->
			<% end %>
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.flat-team -->
