<section id="main-blog" class="single">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="wrap-post">
          <article class="blog-post single style1">
            <div class="entry-post-title">
              <div class="post-title">
                <h2>
                  <a href="#" title=""><%= @assignment.title %></a>
                </h2>
              </div>
              <div class="post-date">
                기한 : <%= @assignment.end_at.strftime('%m월 %d일 %H시 %M분 까지') %>
              </div>
            </div><!-- /.entry-post-title -->
            <div class="featured-post">
              <%= image_tag(@assignment.image.present? ? @assignment.image.url : "/images/simba.jpg") %>
            </div><!-- /.featured-post -->
            <div class="content-post">
              <blockquote>
                <span>“</span>
                <p><%= @assignment.content&.html_safe %></p>
              </blockquote>

              <br><br>
              <div class="right">
                <% if @assignment&.file.present? %>
                  <i class="fa fa-download" aria-hidden="true"></i> 첨부 파일: <%= link_to "#{File.basename(@assignment.file.path)}", downloads_assignment_path(id: @assignment.id) %>
                <% end %>
              </div>
            </div><!-- /.content-post -->
          </article><!-- /.blog-post -->
          <div class="main-single">
            <div class="form-submit right">
              <a href="<%= assignments_path %>" class="btn btn-lg btn-outline-primary">과제 목록</a>
              <a href="<%= assignment_submissions_path(@assignment) %>" class="btn btn-lg btn-outline-primary">제출 목록</a>
              <a href="<%= new_assignment_submission_path(@assignment) %>" class="btn btn-lg btn-primary">과제 제출</a>
            </div>
          </div><!-- /.main-single -->
        </div><!-- /.wrap-post -->
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /#main-blog -->



